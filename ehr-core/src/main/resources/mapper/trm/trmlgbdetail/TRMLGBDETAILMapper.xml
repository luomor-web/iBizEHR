<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper	namespace="cn.ibizlab.ehr.core.trm.mapper.TRMLGBDETAILMapper">

    <!--该方法用于重写mybatis中selectById方法，以实现查询逻辑属性-->

    <!--通过mybatis将查询结果注入到entity中,通过配置autoMapping="true"由mybatis自动处理映射关系 -->
    <resultMap id="TRMLGBDETAILResultMap" type="cn.ibizlab.ehr.core.trm.domain.TRMLGBDETAIL" autoMapping="true">
        <id property="trmlgbdetailid" column="trmlgbdetailid" /><!--主键字段映射-->
		<result property="pimpersonid" column="pimpersonid" />
		<result property="trmlgbcostid" column="trmlgbcostid" />
            
		
		<!--通过mybatis自动注入关系属性[主实体]，fetchType="lazy"为懒加载配置 -->
		<association property="pimperson" javaType="cn.ibizlab.ehr.core.pim.domain.PIMPERSON" column="pimpersonid" select="cn.ibizlab.ehr.core.pim.mapper.PIMPERSONMapper.selectById" fetchType="lazy"></association>
		<!--通过mybatis自动注入关系属性[主实体]，fetchType="lazy"为懒加载配置 -->
		<association property="trmlgbcost" javaType="cn.ibizlab.ehr.core.trm.domain.TRMLGBCOST" column="trmlgbcostid" select="cn.ibizlab.ehr.core.trm.mapper.TRMLGBCOSTMapper.selectById" fetchType="lazy"></association>
    </resultMap>

	<!--关系实体暴露select方法供主实体通过外键查询关系实体数据[实体关系名称:DER1N_TRMLGBDETAIL_PIMPERSON_PIMPERSONID] -->
	 <select id="selectByPimpersonid" resultMap="TRMLGBDETAILResultMap">
         select t1.* from (
                <include refid="Default" />
         ) t1
         where  pimpersonid=#{pimpersonid}
     </select>
	<!--关系实体暴露select方法供主实体通过外键查询关系实体数据[实体关系名称:DER1N_TRMLGBDETAIL_TRMLGBCOST_TRMLGBCOSTID] -->
	 <select id="selectByTrmlgbcostid" resultMap="TRMLGBDETAILResultMap">
         select t1.* from (
                <include refid="Default" />
         ) t1
         where  trmlgbcostid=#{trmlgbcostid}
     </select>

    <!--数据集合[Default]-->
	 <select id="searchDefault"  parameterType="cn.ibizlab.ehr.core.trm.filter.TRMLGBDETAILSearchContext"  resultMap="TRMLGBDETAILResultMap">
         select t1.* from (
                <include refid="Default" />
         )t1
         <where><if test="ew!=null and ew.sqlSegment!=null and !ew.emptyOfWhere">${ew.sqlSegment}</if></where>
         <if test="ew!=null and ew.sqlSegment!=null and ew.emptyOfWhere">${ew.sqlSegment}</if>
     </select>

    <!--数据查询[Default]-->
    <sql id="Default" databaseId="mysql">
       <![CDATA[	SELECT t1.`CREATEDATE`, t1.`CREATEMAN`, t1.`ENABLE`, t1.`PIMPERSONID`, t11.`PIMPERSONNAME`, t1.`TRMLGBCOSTID`, t21.`TRMLGBCOSTNAME`, t1.`TRMLGBDETAILID`, t1.`TRMLGBDETAILNAME`, t1.`UPDATEDATE`, t1.`UPDATEMAN`, t11.`ZJHM` FROM `T_TRMLGBDETAIL` t1  LEFT JOIN T_PIMPERSON t11 ON t1.PIMPERSONID = t11.PIMPERSONID  LEFT JOIN T_TRMLGBCOST t21 ON t1.TRMLGBCOSTID = t21.TRMLGBCOSTID  
				 WHERE 	t1.ENABLE = 1
			]]>
    </sql>

    <!--数据查询[Default]-->
    <sql id="Default" databaseId="oracle">
       <![CDATA[	SELECT t1.CREATEDATE, t1.CREATEMAN, t1.ENABLE, t1.PIMPERSONID, t11.PIMPERSONNAME, t1.TRMLGBCOSTID, t21.TRMLGBCOSTNAME, t1.TRMLGBDETAILID, t1.TRMLGBDETAILNAME, t1.UPDATEDATE, t1.UPDATEMAN, t11.ZJHM FROM T_TRMLGBDETAIL t1  LEFT JOIN T_PIMPERSON t11 ON t1.PIMPERSONID = t11.PIMPERSONID  LEFT JOIN T_TRMLGBCOST t21 ON t1.TRMLGBCOSTID = t21.TRMLGBCOSTID  
				 WHERE 	t1.ENABLE = 1
			]]>
    </sql>

