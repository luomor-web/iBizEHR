<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper	namespace="cn.ibizlab.ehr.core.pim.mapper.PIMWorkflowRefMapper">

    <!--该方法用于重写mybatis中selectById方法，以实现查询逻辑属性-->
	<select id="selectById"  resultMap="PIMWorkflowRefResultMap" databaseId="oracle">
        <![CDATA[select * from v_pimworkflowref t1     where  pimworkflowrefid=#{id}]]>
    </select>

    <!--通过mybatis将查询结果注入到entity中,通过配置autoMapping="true"由mybatis自动处理映射关系 -->
    <resultMap id="PIMWorkflowRefResultMap" type="cn.ibizlab.ehr.core.pim.domain.PIMWorkflowRef" autoMapping="true">
        <id property="pimworkflowrefid" column="pimworkflowrefid" /><!--主键字段映射-->
		<result property="wfworkflowid" column="wfworkflowid" />
		<result property="pimworkflowid" column="pimworkflowid" />
            
		
		<!--通过mybatis自动注入关系属性[主实体]，fetchType="lazy"为懒加载配置 -->
		<association property="pimworkflow" javaType="cn.ibizlab.ehr.core.pim.domain.PIMWorkflow" column="pimworkflowid" select="cn.ibizlab.ehr.core.pim.mapper.PIMWorkflowMapper.selectById" fetchType="lazy"></association>
		<!--通过mybatis自动注入关系属性[主实体]，fetchType="lazy"为懒加载配置 -->
		<association property="wfworkflow" javaType="cn.ibizlab.ehr.core.wf.domain.WFWorkflow" column="wfworkflowid" select="cn.ibizlab.ehr.core.wf.mapper.WFWorkflowMapper.selectById" fetchType="lazy"></association>
    </resultMap>

	<!--关系实体暴露select方法供主实体通过外键查询关系实体数据[实体关系名称:DER1N_PIMWORKFLOWREF_PIMWORKFLOW_PIMWORKFLOWID] -->
	 <select id="selectByPimworkflowid" resultMap="PIMWorkflowRefResultMap">
         select t1.* from (
                <include refid="Default" />
         ) t1
         where  pimworkflowid=#{pimworkflowid}
     </select>
	<!--关系实体暴露select方法供主实体通过外键查询关系实体数据[实体关系名称:DER1N_PIMWORKFLOWREF_WFWORKFLOW_WFWORKFLOWID] -->
	 <select id="selectByWfworkflowid" resultMap="PIMWorkflowRefResultMap">
         select t1.* from (
                <include refid="Default" />
         ) t1
         where  wfworkflowid=#{wfworkflowid}
     </select>

    <!--数据集合[Default]-->
	 <select id="searchDefault"  parameterType="cn.ibizlab.ehr.core.pim.filter.PIMWorkflowRefSearchContext"  resultMap="PIMWorkflowRefResultMap">
         select t1.* from (
                <include refid="Default" />
         )t1
         <where><if test="ew!=null and ew.sqlSegment!=null and !ew.emptyOfWhere">${ew.sqlSegment}</if></where>
         <if test="ew!=null and ew.sqlSegment!=null and ew.emptyOfWhere">${ew.sqlSegment}</if>
     </select>

    <!--数据查询[Default]-->
    <sql id="Default" databaseId="oracle">
       <![CDATA[	SELECT t1.CREATEDATE, t1.CREATEMAN, t11.ORMORGID, t1.PIMWORKFLOWID, t11.PIMWORKFLOWNAME, t1.PIMWORKFLOWREFID, t1.PIMWORKFLOWREFNAME, t1.UPDATEDATE, t1.UPDATEMAN, t1.WFWORKFLOWID, t21.WFWORKFLOWNAME FROM T_PIMWORKFLOWREF t1  LEFT JOIN T_PIMWORKFLOW t11 ON t1.PIMWORKFLOWID = t11.PIMWORKFLOWID  LEFT JOIN T_SRFWFWORKFLOW t21 ON t1.WFWORKFLOWID = t21.WFWORKFLOWID  
			]]>
    </sql>

</mapper>

