<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>ehr</artifactId>
        <groupId>cn.ibizlab.ehr</groupId>
        <version>1.0.0.0</version>
    </parent>

    <artifactId>ehr-boot</artifactId>
    <name>Ehr Dev Monolithic Boot</name>
    <description>Ehr Boot</description>

    <dependencies>
        <dependency>
            <groupId>cn.ibizlab.ehr</groupId>
            <artifactId>ehr-core</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>cn.ibizlab.ehr</groupId>
            <artifactId>ehr-provider-webapi</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>cn.ibizlab.ehr</groupId>
            <artifactId>ehr-app-ehrhelp</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>cn.ibizlab.ehr</groupId>
            <artifactId>ehr-app-ehr</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>cn.ibizlab.ehr</groupId>
            <artifactId>ehr-app-ehrsoc</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>cn.ibizlab.ehr</groupId>
            <artifactId>ehr-app-ehrpcm2</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>cn.ibizlab.ehr</groupId>
            <artifactId>ehr-app-ehrsal</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>cn.ibizlab.ehr</groupId>
            <artifactId>ehr-app-ehrmob</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>cn.ibizlab.ehr</groupId>
            <artifactId>ehr-app-ehrpcm</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>cn.ibizlab.ehr</groupId>
            <artifactId>ehr-app-ehrorm</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>cn.ibizlab.ehr</groupId>
            <artifactId>ehr-app-ehrpar</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>cn.ibizlab.ehr</groupId>
            <artifactId>ehr-app-ehrtrm</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>cn.ibizlab.ehr</groupId>
            <artifactId>ehr-app-ehratt</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>cn.ibizlab.ehr</groupId>
            <artifactId>ehr-app-ehrpim</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>

    <!--由于boot是通过dependency来关联所有子项目，页面和配置等信息都存在与子项目中，
    所以您在对boot进行打包前，需要先将子项目install到maven仓库，以确保boot可以正常引用所有完整的子项目-->
    <profiles>
        <profile>
            <id>boot</id>
			<build>
				<resources>
					<resource>
						<directory>${basedir}/src/main/resources</directory>
						<includes>
							<include>**/**</include>
						</includes>
					</resource>
				</resources>

				<plugins>
					<plugin>
						<groupId>org.springframework.boot</groupId>
						<artifactId>spring-boot-maven-plugin</artifactId>
						<configuration>
							<finalName>ehr</finalName>
							<jvmArguments>-Dfile.encoding=UTF-8</jvmArguments>
							<mainClass>cn.ibizlab.ehr.DevBootApplication</mainClass>
						    <outputDirectory>../</outputDirectory>
						</configuration>
						<executions>
							<execution>
								<goals>
									<goal>repackage</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>
